generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spec {
  id          String   @id @default(uuid())
  goal        String
  users       String
  constraints String
  risks       String?
  template    String
  createdAt   DateTime @default(now())

  taskGroups  TaskGroup[]
}

model TaskGroup {
  id      String @id @default(uuid())
  title   String

  specId  String
  spec    Spec   @relation(fields: [specId], references: [id], onDelete: Cascade)

  tasks   Task[]
}

model Task {
  id        String @id @default(uuid())
  content   String
  order     Int

  groupId   String
  group     TaskGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}
