generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spec {
  id          String   @id @default(uuid())
  goal        String
  users       String
  constraints String
  risks       String?
  template    String
  createdAt   DateTime @default(now())

  stories     Story[]
  taskGroups  TaskGroup[]
}

model Story {
  id          String   @id @default(uuid())
  content     String
  order       Int
  isCompleted Boolean  @default(false) 
  specId      String
  spec        Spec     @relation(fields: [specId], references: [id], onDelete: Cascade)
}

model TaskGroup {
  id      String @id @default(uuid())
  title   String
  specId  String
  spec    Spec   @relation(fields: [specId], references: [id], onDelete: Cascade)
  tasks   Task[]
}

model Task {
  id          String   @id @default(uuid())
  content     String
  order       Int
  isCompleted Boolean  @default(false) 
  priority    String   @default("medium") 
  
  groupId     String
  group       TaskGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}